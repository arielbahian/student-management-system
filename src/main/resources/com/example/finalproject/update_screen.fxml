<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<DialogPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.finalproject.UpdateScreen">
    <content>
        <AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="400.0" prefWidth="600.0">
            <children>
                <!-- Labels VBox -->
                <VBox layoutY="102.0" prefHeight="400.0" prefWidth="200.0" style="-fx-alignment: CENTER;">
                    <children>
                        <Label alignment="CENTER_RIGHT" prefHeight="30.0" prefWidth="150.0" text="FIRST NAME :" />
                        <Label alignment="CENTER_RIGHT" prefHeight="30.0" prefWidth="150.0" text="MIDDLE NAME :" />  <!-- new -->
                        <Label alignment="CENTER_RIGHT" prefHeight="30.0" prefWidth="150.0" text="LAST NAME :" />
                        <Label alignment="CENTER_RIGHT" prefHeight="30.0" prefWidth="150.0" text="SEX :" />
                        <Label alignment="CENTER_RIGHT" prefHeight="30.0" prefWidth="150.0" text="BIRTHDATE :" />
                        <Label alignment="CENTER_RIGHT" prefHeight="30.0" prefWidth="150.0" text="PHONE NUMBER :" />
                        <Label alignment="TOP_RIGHT" prefHeight="60.0" prefWidth="150.0" text="ADDRESS :" />
                        <Label alignment="CENTER_RIGHT" prefHeight="30.0" prefWidth="150.0" text="EMAIL :" />
                        <Label alignment="CENTER_RIGHT" prefHeight="30.0" prefWidth="150.0" text="STUDENT NUMBER :" />
                        <Label alignment="CENTER_RIGHT" prefHeight="30.0" prefWidth="150.0" text="COURSE :" />
                        <Label alignment="CENTER_RIGHT" prefHeight="30.0" prefWidth="150.0" text="YEAR LEVEL :" />
                    </children>
                </VBox>

                <!-- Inputs VBox -->
                <VBox layoutX="203.0" layoutY="102.0" prefHeight="400.0" prefWidth="400.0" spacing="5.0">
                    <children>
                        <TextField fx:id="editFirstNameField" prefHeight="26.0" prefWidth="264.0" />
                        <TextField fx:id="editMiddleNameField" prefHeight="26.0" prefWidth="264.0" />  <!-- new -->
                        <TextField fx:id="editLastNameField" prefHeight="26.0" prefWidth="264.0" />
                        <HBox prefHeight="26.0" prefWidth="280.0">
                            <children>
                                <RadioButton fx:id="editMaleRadio" mnemonicParsing="false" text="MALE">
                                    <padding>
                                        <Insets right="5.0" />
                                    </padding>
                                </RadioButton>
                                <RadioButton fx:id="editFemaleRadio" mnemonicParsing="false" text="FEMALE" />
                            </children>
                        </HBox>
                        <TextField fx:id="editBirthdateField" />
                        <TextField fx:id="editPhoneField" />
                        <TextArea fx:id="editAddressArea" prefHeight="53.0" prefWidth="280.0" />
                        <TextField fx:id="editEmailField" />
                        <TextField fx:id="editStudentNumberField" />
                        <TextField fx:id="editCourseField" />
                        <TextField fx:id="editYearLevelField" />
                    </children>
                    <padding>
                        <Insets right="45.0" top="35.0" />
                    </padding>
                </VBox>

                <!-- Title HBox -->
                <HBox prefHeight="100.0" prefWidth="601.0" style="-fx-alignment: center;">
                    <children>
                        <Label alignment="CENTER" maxWidth="-Infinity" prefHeight="40.0" prefWidth="285.0" style="-fx-alignment: center;" text="UPDATE STUDENT">
                            <HBox.margin>
                                <Insets />
                            </HBox.margin>
                            <font>
                                <Font name="Bank Gothic Light BT" size="35.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>
            </children>
        </AnchorPane>
    </content>
</DialogPane>
